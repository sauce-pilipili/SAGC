{{ form_start(form, {'attr':{'class':'form'}}) }}
<h2>Information sur le document</h2>
<div class="row">
    <label class="label" for="date-match">
        <p>Nom du document</p>
    </label>
    {{ form_errors(form.name) }}
    {{ form_widget(form.name) }}
</div>
<div class="row">
    <label class="label" for="lieu-match">
        <p>document</p>
        {% if app.request.attributes.get('_route') == 'app_infos_edit' %}
        {{ info.nomDocument }}
        {% endif %}
    </label>
    {{ form_errors(form.document) }}
    {{ form_widget(form.document) }}

</div>

<div>
    <button class="bouton-1" type="submit">
        <span>Enregistrer</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="8" height="14" viewBox="0 0 8 14">
            <path id="chevron-down" d="M.293,7.707a1,1,0,0,0,1.414,0L7,2.414l5.293,5.293a1,1,0,0,0,1.414-1.414l-6-6a1,1,0,0,0-1.414,0l-6,6A1,1,0,0,0,.293,7.707Z" transform="translate(8) rotate(90)"/>
        </svg>
    </button>
</div>
{{ form_end(form) }}
