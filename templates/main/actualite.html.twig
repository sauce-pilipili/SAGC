{% extends 'base.html.twig' %}
{% block title %}SAGC -actualités{% endblock %}
{% block body %}
    {{ include('_includes/Front/navigation.html.twig') }}
    <main>
        <section class="news_text_section">
            <h1 class="news_title">LES ACTUALITES</h1>
            <ul class="news_list">
                <li class="news_list_item"><a href="{{ path('app_actualite',{categorie: null}) }}">Tous</a></li>
                {% for categorie in categories %}
                    <li class="news_list_item"><a
                                href="{{ path('app_actualite',{categorie: categorie.id}) }}">{{ categorie.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </section>
        <section class="news_cards_section">
            <div class="news_cards_container">
                {% for article in articles %}
                    <div class="news_card">
                        <img src="{{ asset('uploads/'~article.imageEnAvant) }}" alt="{{ article.legendePhotoEnAvant }}"
                             class="news_card_img"/>
                        <div class="news_text_container">
                            <h5 class="news_article_category">{{ article.categorie.name }}</h5>
                            <h5 class="news_article_title">{{ article.title }}</h5>
                            <p class="news_article_text">
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                                Temporibus voluptatem molestiae, distinctio molestias
                                excepturi consequuntur a illo officiis veritatis harum! Maxime
                                magnam atque corporis qui earum eligendi placeat provident
                                molestiae?
                            </p>
                            <a href="{{ path('app_sagc_article', {slug: article.slug}) }}" class="news_btn">Lire
                                l'article</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="{{ path('app_actualite',{categorie:null}) }}" class="button">Voir plus d'actualités</a>
        </section>
    </main>
    {{ include('_includes/Front/footer.html.twig') }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ (asset('Front/CSS/les-actualites/les-actualites.css')) }}">
    <link rel="stylesheet" href=" {{ (asset('Front/CSS/les-actualites/les-actualites-responsive.css')) }}"

{% endblock %}