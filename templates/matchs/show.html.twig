    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>DateMatch</th>
                <td>{{ match.DateMatch ? match.DateMatch|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LieuDuMatch</th>
                <td>{{ match.lieuDuMatch }}</td>
            </tr>
            <tr>
                <th>ResultatSagc</th>
                <td>{{ match.resultatSagc }}</td>
            </tr>
            <tr>
                <th>ResultatAdversaire</th>
                <td>{{ match.resultatAdversaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matchs_index') }}">back to list</a>

    <a href="{{ path('app_matchs_edit', {'id': match.id}) }}">edit</a>

