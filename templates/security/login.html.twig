{% extends 'Back.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="section-connexion_logo">
        <a class="bloc-logo">
            <img src="{{ asset('Back/img/logo-sagc.svg') }}" alt="">
        </a>
    </section>
    <section class="section-connexion_form">
        <div class="content-form">
            <form class="form" method="post">

                <h1>Connectez-vous</h1>
                <div class="row">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes conecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
                        </div>
                    {% endif %}
                    <label class="label" for="inputEmail">
                        <p>Identifiant</p>
                    </label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" autocomplete="email" placeholder="Écrivez votre adresse mail" required autofocus>
                </div>
                <div class="row">
                    <label class="label" for="inputPassword">
                        <p>Mot de passe</p>
                    </label>
                    <input type="password" name="password" id="inputPassword" class="input" autocomplete="current-password" placeholder="Écrivez votre mot de passe" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <div>
                    <a href="">Mot de passe oublié ?</a>
                </div>
                <div>
                        <button class="bouton-1" type="submit">
                            <span>Se connecter</span>
                        </button>


{#                    <a href="tableau-de-bord.html" class="bouton-1" type="submit">#}
{#                        <span>Se connecter</span>#}
{#                    </a>#}
                </div>
            </form>
        </div>
    </section>


